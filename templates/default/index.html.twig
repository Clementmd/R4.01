{% extends 'base.html.twig' %}

{% block title %}
    {{ 'boutique.index.titre_page' | trans }}
{% endblock %} {# Un seul endblock ici #}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h3>
                <i class="fas fa-store"></i>
                {{ 'boutique.index.titre' | trans }}
                ({{ dateActuelle|date('d/m/Y') }})
                {{ 'boutique.index.nb_rayons' | trans }}
            </h3>
        </div>
        <div class="card-body">
            <div class="card clickable" onclick="location = '{{ path('app_boutique_index') }}'">
                <img src="{{ asset("images/epicerie.jpg") }}" class="card-img-top" alt="Logo Boutique"/>
                <div class="card-body">
                    <p class="card-text">
                        <i>{{ 'boutique.index.phrase_bienvenue' | trans }}</i>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
